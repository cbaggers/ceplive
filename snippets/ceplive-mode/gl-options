# -*- mode: snippet -*-
# name: Cepl - some basic gl options
# key: gl-options
# binding: direct-keybinding
# type: snippet
# --
(cgl:clear-color 0.0 0.0 0.0 0.0)
(gl:enable :cull-face)
(gl:cull-face :back)
(gl:front-face :ccw)
(gl:enable :depth-test)
(gl:depth-mask :true)
(gl:depth-func :lequal)
(gl:depth-range 0.0 1.0)
(gl:enable :depth-clamp)